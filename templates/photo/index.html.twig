{% extends 'base.html.twig' %}

{% block title %}Liste des Photos{% endblock %}

{% block body %}
    <h1>Liste des Photos</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Photo</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for photo in photos %}
            <tr>
                <td>{{ photo.id }}</td>
                <td>{{ photo.photo }}</td>
                <td>{{ photo.nom }}</td>
                <td>
                    <a href="{{ path('photo_show', {'id': photo.id}) }}">Afficher</a>
                    <a href="{{ path('photo_edit', {'id': photo.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('photo_new') }}">Create new</a>
{% endblock %}
